pipeline {
    agent any
    tools {
        maven 'Homebrew Maven'  // Varmista, ett채 Maven on asennettu
        jdk 'JDK11'     // Varmista, ett채 JDK on asennettu (vaihda tarvittaessa oikeaan asennettuun versioon)
    }
    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/annikannisto/DiceRoll.git', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Run Unit Tests') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'  // Ker채채 testiraportit
                }
            }
        }
        stage('Code Coverage Report') {
            steps {
                sh 'mvn jacoco:report'
            }
            post {
                always {
                    jacoco execPattern: 'target/jacoco.exec'
                }
            }
        }
    }
}
